<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/colorDarkCoffee" />
            <gradient android:angle="-90" android:startColor="@color/colorMoreDarkerCoffee" android:endColor="@color/colorDarkCoffee"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/colorMoreDarkerCoffee" />
            <solid android:color="@color/colorDarkCoffee"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/colorDarkCoffee" />
            <gradient android:angle="-90" android:startColor="@color/colorDarkCoffee" android:endColor="@color/colorMoreDarkerCoffee" />
        </shape>
    </item>

</selector>