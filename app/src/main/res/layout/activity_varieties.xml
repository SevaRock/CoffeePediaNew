<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA7C50"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sevarock.coffeepedia.VarietiesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coffee Varieties"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/ListVarietiesHeader"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#111111"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ListVarietiesHeader">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Arusha"
                android:background="@drawable/coffeebutton"
                android:textStyle="italic"
                android:text="Arusha"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_marginBottom="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Bergendal"
                android:background="@drawable/coffeebutton"
                android:textStyle="italic"
                android:text="Bergendal"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_marginBottom="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BlueMountain"
                android:background="@drawable/coffeebutton"
                android:textStyle="italic"
                android:text="Blue Mountain"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_marginBottom="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Bourbon"
                android:background="@drawable/coffeebutton"
                android:textStyle="italic"
                android:text="Bourbon"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_marginBottom="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Catimor"
                android:background="@drawable/coffeebutton"
                android:textStyle="italic"
                android:text="Catimor"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_marginBottom="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Catuai"
                android:background="@drawable/coffeebutton"
                android:textStyle="italic"
                android:text="Catuai"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_marginBottom="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Caturra"
                android:background="@drawable/coffeebutton"
                android:textStyle="italic"
                android:text="Caturra"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_marginBottom="8dp"/>








        </LinearLayout>








    </ScrollView>





</RelativeLayout>
