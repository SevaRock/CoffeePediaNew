<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#BA7C50"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sevarock.coffeepedia.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeText"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textStyle="bold"
        android:text="Welcome to the world of Coffee!"
        android:layout_marginBottom="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/ButtonSorts"
        android:layout_height="wrap_content"
        android:background="@drawable/coffeebutton"
        android:text="List Of Coffee Drinks"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:onClick="listClick"
        android:layout_below="@+id/welcomeText"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/ButtonVarieties"
        android:layout_height="wrap_content"
        android:background="@drawable/coffeebutton"
        android:text="Coffee Varieties"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_below="@+id/ButtonSorts"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CappucinoArtButton"
        android:background="@drawable/coffeebutton"
        android:text="Latte Art Gallery"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:onClick="LatteGallery"
        android:layout_below="@+id/ButtonVarieties"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinksButton"
        android:background="@drawable/coffeebutton"
        android:text="Links"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:layout_below="@+id/CappucinoArtButton"
        android:onClick="linksClick"
        android:layout_marginBottom="8dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MapButton"
        android:background="@drawable/coffeebutton"
        android:text="Find a Coffee Place Nearby"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:layout_below="@+id/LinksButton"
        android:onClick="mapClick"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
