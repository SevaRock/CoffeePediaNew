<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#BA7C50"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sevarock.coffeepedia.LatteArtGallery">

    <ImageView
        android:id="@+id/art1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/art"
        android:scaleType="fitXY"
        android:layout_above="@+id/art4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/art2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/art1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/art1"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/art3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/art2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/art2"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/art4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/art4"
        android:scaleType="fitXY"
        android:layout_above="@+id/art7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/art5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/art4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/art5"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/art6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/art5"
        android:layout_alignLeft="@+id/art3"
        android:layout_alignStart="@+id/art3"
        android:src="@drawable/art6"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/art7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/art7"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/art8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/art8"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/art7"
        android:layout_alignLeft="@+id/art5"
        android:layout_alignStart="@+id/art5" />

    <ImageView
        android:id="@+id/art9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/art9"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/art7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
